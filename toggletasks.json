{

	"tasks" : [
		
		{
			"name" : "Configure project",
			"cmd" : "mkdir -p ${config_dir}/build && cmake -S ${config_dir} -B ${config_dir}/build -DCMAKE_EXPORT_COMPILE_COMMANDS=ON && cp ${config_dir}/build/compile_commands.json ${config_dir}",
			"tags" : [ "cmake" ]
		},

		{
			"name" : "Clean project",
			"cmd" : "rm -rf ${config_dir}/build && rm ${config_dir}/compile_commands.json",
			"tags" : [ "cmake" ]
		},

		{
			"name" : "Build project",
			"cmd" : "cmake --build ${config_dir}/build",
			"tags" : [ "cmake" ]
		},

		{
			"name" : "Build doc",
			"cmd" : "make doc",
			"cwd" : "${config_dir}/build",
			"tags" : [ "cmake", "make", "doc" ]
		}

	]

}
